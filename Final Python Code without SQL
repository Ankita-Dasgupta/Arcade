import random,sys,time
def printt(message):
    for char in message:
            sys.stdout.write(char)
            sys.stdout.flush()
            time.sleep(0.02)    
            if char=="\n":
                time.sleep(0.1)
            else:
                time.sleep(0.01)
def level1():
    def dif():
        global dic
        dic={1:"Hard",2:"Moderate",3:"Easy"}
        while True:
            global lives,difficulty,finalscore,name
            lives=0
            difficulty=int(input("\n\nGame Console: Choose your difficulty:\n3:Easy\n2:Moderate\n1:Hard\n"))
            if difficulty<=3:
                print("Game Console: You have chosen: ",dic[difficulty]," mode")
                if input("Game Console: Enter C to Confirm or Enter any other character to change difficulty\n")=='c'or'C':
                    if difficulty==3:
                        lives=3
                        printt("\nYour Chaperone 0_0: You have 3 lives use it cautiously\n\n")
                        break     
                    elif difficulty==2:
                        lives=2
                        printt("\nYour Chaperone 0_0: You have 2 lives use it cautiously\n\n")
                        break
                    elif difficulty==1:
                        lives=1
                        printt("\nYour Chaperone 0_0: You have 1 life use it cautiously\n\n")
                        break
                else:
                    continue
            else:
                printt("Your Chaperone 0_0: Invalid Number Please Pick A Number Between 1 to 3\n\n")
    dif()
    rand1=0
    rand2=0
    ans1=0
    realans1=0
    realans2=0
    ans2=0
    realans3=0
    ans3=0
    rand3=0
    printt("Monster 1: Dr. Linear Equation XD\n\n")
    printt("Your Chaperone 0_0: Dr. Linear Equation tests your addition skills, there are three difficulties to his questions\n")
    print(name,end="")
    printt(", These are the number of chances you shall recieve:")
    print(difficulty,"\n")
    global lives
    while lives!=0:
        rand1=random.randint(0,9)
        rand2=random.randint(0,9)
        realans1=rand1+rand2
        print(rand1,"+",rand2,"=")
        ans1=int(input())
        if realans1== ans1:
            printt("\nDr. Linear Equation X_0 :Tsk you're not as dumb as you look after all\nYou wont get this one right!\n\n")
            rand1=random.randint(0,99)
            rand2=random.randint(0,99)
            realans2=rand1+rand2
            print(rand1,"+",rand2,"=")
            ans2=int(input())
        else:
            printt("\n\nDr. Linear Equation XD :AHAHHA! YOU'RE A NINCOMPOOP\n\n")
            lives=lives-1
            print("Remaning lives=",lives,"\n")
            continue
        if realans2==ans2:
            printt("\n\nDr. Linear Equation -_- :That's right ppfft but I'll let you take the little pickings (͠° ͟ʖ ͡°)\nI'll ask you a question that will not bring you back to this place!\n\n")
            rand1=random.randint(0,99)
            rand2=random.randint(0,99)
            rand3=random.randint(0,99)
            print(rand1,"+",rand2,"-",rand3,"=")
            realans3=rand1+rand2-rand3
            ans3=int(input())
        else:
             printt("\n")
             lives=lives-1
             printt("Dr. Linear Equation XD : HAHAHA I KNEW YOU WOULDNT BE ABLE TO ANSWER THIS ONE ¬ヘ(^∀ ^ )\n\nYOU JUST LOST ONE OF YOUR LIVES x_X\n\n")
             print("Remaning lives=",lives,"\n")
             continue
        if realans3==ans3:
               printt("Dr. Linear Equation >_< : NOOOOO HOW ARE YOU BETTER THAN ME, UM- THE EXIT IS THAT WAY(⌒_⌒;)\n\n*CONGRATS YOU EMBARRASED THE LINEAR EQUATION MONSTER*\n\n")
               printt("You now walk towards the exit, a door opens... You walk through a long corridor while you hear a crowd of people,\n")
               printt("You come out the end of the long corridor and what-... YOU'RE IN THE COLOSSEUM!\n\n")
               global finalscore
               finalscore=10
               break
        else:
            printt("Dr. Linear Equation ¬ヘ(^∀ ^ ): WHAT A SHAME, YOU GO BACK TO THE FIRST QUESTION XD\nAND YOU LOST A LIFE X_x ")
            lives=lives-1
            print("Remaning lives=",lives)
            continue
    if lives==0:
        printt("Dr. Linear Equation XD: HAHA GAME OVER! YOU GET ZERO POINTS TRY AGAIN IF YOU WANNA LOSE xD")
def level2():
    printt("\nMonster 2: Mr. Julius Caesar...\n\n")
    def roman(romanvalue):
        Romanletters = [
            (1000,'M'),
            (900,'CM'),
            (500,'D'),
            (400,'CD'),
            (100,'C'),
            (90,'XC'),
            (50,'L'),
            (40,'XL'),
            (10,'X'),
            (9,'IX'),
            (5,'V'),
            (4,'IV'),
            (1,'I')]
        res=''
        for (num, roman) in Romanletters:
            a= (int)(romanvalue/num)
            b= (int)(romanvalue%num)
            (c, romanvalue)=(a,b)
            res+=roman*c
        return res
    global finalscore
    for i in range(0,4):
        Question=random.randint(1,4000)
        ComputerAnswer=roman(Question)
        print("\nNumber: ",Question,"\n")
        Answer=input("I'M SURE YOU WONT GET THIS ONE!\nEnter your answer in Roman Numerals:\n")
        if ComputerAnswer == Answer:
            finalscore=finalscore+10
            if i!=3:
                printt("AGH! I UNDERESTIMATED YOU, YOU WONT GET ANOTHER ONE!\n")
            else:
                printt("YOU BEAT ME IN MY OWN STADIUM! CURSE YOU! THE EXECUTIONER WILL SURELY STOP YOU!")
        else:
            printt("AH HA! EEEEEK WRONG ANSWER! GO HOME TO GRANDMA YOU I TOOK 10 OF YOUR CREDITS! XP")
            finalscore-=10
def level3():
    printt("Level 3: The Executioner...")
    a=input("Enter I if you want to see the instructions to hangman")
    if a=="i"or"I":
        with open("Hangman Instructions.txt") as file3:
            for i in file3:
                for line in file3.readline():
                    printt(line)
        file3.close()  
    def main():
        global finalscore
        c=0
        def hangman():
            global finalscore
            import random
            '''
            f = open("t1.txt")
            #need to import text file onto git?
            word_list = f.readlines()
           '''
            word_list=["School", "Pencil", "Toys", "Notebook"]
            choice = random.choice(word_list)
            choice_upper = choice.upper()
            guessed = False
            guessed_letters = []
            guessed_words = []
            tries = 6
            printt("Ready to play Hangman round ")
            print(c+1,end="")
            printt("?\n")
            def hangman_display(tries):
                stages = [  # final state: head, torso, both arms, and both legs
                    """
                        ______
                       |      |
                       |      O
                       |     \|/
                       |      |
                      _|_    / \
                    """,
                    # head, torso, both arms, and one leg
                    """
                        ______
                       |      |
                       |      O
                       |     \|/
                       |      |
                      _|_    /
                    """,
                    # head, torso, and both arms
                    """
                        ______
                       |      |
                       |      O
                       |     \|/
                       |      |
                      _|_
                    """,
                    # head, torso, and one arm
                    """
                        ______
                       |      |
                       |      O
                       |     \|
                       |      |
                      _|_
                    """,
                    # head and torso
                    """
                        ______
                       |      |
                       |      O
                       |      |
                       |      |
                      _|_
                    """,
                    # head
                    """
                        ______
                       |      |
                       |      O
                       |
                       |
                      _|_
                       
                    """,
                    # initial empty state
                    """
                        ______
                       |      |
                       |
                       |
                       |
                      _|_
                    """
                ]
                return stages[tries]
            underscores = "_" * len(choice_upper)
            printt(hangman_display(tries))
            print("_ " * len(choice_upper))
            underscore_change = list(underscores)
            while not guessed and tries > 0:
                guess = input("\nEnter a letter or a word\n")  # user guess
                guess_upper = guess.upper()  # guess in upper to prevent errors
                if len(guess) == 1 and guess_upper.isalpha():  # if letter
                    '''
                    error handling if guess length is 1 it is a digit 
                    or alpha and isalpha checks for simply alpha
                    '''
                    
                    if guess_upper in guessed_letters:
                        printt("You have already guessed the letter:")
                        print(guess_upper,"\n")

                    elif guess_upper not in choice_upper:
                        tries = tries - 1
                        guessed_letters.append(guess_upper)
                        print("Oh no!",'"{}"'.format(guess),"is not in the word!\n")

                    else:  # final option- correct guess
                        print("Good job!", guess_upper, "is in the word!")
                        guessed_letters.append(guess_upper)
                        placeholder = []
                        index=-1
                        for i in choice_upper:
                            index=index+1
                            if guess_upper == i:
                                placeholder.append(guess_upper)
                            else:
                                placeholder.append(underscore_change[index])

                        underscores = ' '.join(placeholder)
                        printt(underscores)
                        underscore_change = placeholder
                        if placeholder  == list(choice_upper) :
                                guessed = True
               #I have to change this logic , loop will never end otherwise
                elif len(guess) > 1 and guess.isalpha():
                    if guess_upper in guessed_words:
                        printt("You already guessed that word!\n")
                        printt(underscores)
                    elif guess_upper != choice_upper:
                        print(guess, "is not the word!\n")
                        guessed_words.append(guess.upper())
                        tries = tries - 1
                    else:
                        guessed = True
                        underscores = choice_upper
                    #underscores = ' '.join(placeholder)
                    print(" ".join(underscores))
                else:
                    tries = tries -1
                    print("Not a valid answer")
                if guessed==True:
                    print("Congrats you completed round ", c+1,"\n")
                    printt("Well done you got this word!")
                    break
                else:
                    printt("The number of tries you have left: ")
                    print(tries)
                    print(hangman_display(tries))
            #guess over display where the user is at right now
            if guessed==False:
                printt("Oh no! You lost this round!\n")
        while c<3:
            hangman()
            c=c+1
        else:
            finalscore+=10 
            print("You got 10 credits your score now is= ",finalscore,"\n") 
#THIS IS WHERE THE CODE STARTS FROM
